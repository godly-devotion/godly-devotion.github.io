---
import Button from "../components/button.astro";
import Projects from "../components/home/projects.astro";
import Separator from "../components/home/separator.astro";
import Layout from "../layouts/main.astro";
---

<Layout title="Joshua Park">
  <div
    class="relative z-20 mx-auto mt-16 w-full max-w-4xl px-7 md:mt-24 lg:mt-32 xl:px-0"
  >
    <div class="flex flex-col items-center md:flex-row">
      <div class="relative w-full md:w-1/2">
        <h1
          class="mb-5 text-4xl font-bold leading-tight dark:text-white md:text-4xl lg:text-6xl"
        >
          Hello, I'm Josh.
        </h1>
        <p class="mb-6 text-base text-neutral-600 dark:text-neutral-400">
          I'm a Software Engineer living in the United States. <br
            class="hidden lg:block"
          />I focus on full-stack web and mobile app development.
        </p>
        <p class="mb-2 font-semibold text-neutral-800 dark:text-neutral-200">
          I can help you out with:
        </p>
        <ul
          class="list-inside list-disc space-y-[3px] py-2 text-sm text-neutral-500 dark:text-neutral-400"
        >
          <li>Angular</li>
          <li>React</li>
          <li>React Native</li>
          <li>Svelte</li>
          <li>Swift</li>
          <li>C#</li>
          <li>and more...</li>
        </ul>
        <Button
          text="Contact Me"
          link="mailto:jpark@duck.com"
        />
      </div>
      <div
        class="relative mt-10 hidden w-full justify-end md:mt-0 md:flex md:w-1/2 md:translate-y-4 md:pl-10 xl:translate-y-0"
      >
        <div class="relative z-50 w-full">
          <div
            class="absolute bottom-0 top-0 z-40 h-16 w-16 -translate-x-6 -translate-y-1/2 rounded-full lg:top-auto lg:-translate-y-[330px]"
          >
            <span
              class="relative z-20 flex h-full w-full items-center justify-center rounded-full border-8 border-white bg-neutral-100 text-2xl dark:border-neutral-950 dark:bg-neutral-900"
            >
              <span
                class="flex h-full w-full items-center justify-center rounded-full border border-dashed border-neutral-300 bg-white dark:border-neutral-700 dark:bg-neutral-950"
                >ðŸ‘‹</span
              >
            </span>
          </div>
          <div class="relative z-30">
            <img
              src="/assets/images/photo.png"
              loading="eager"
              decoding="auto"
              class="relative z-30 mx-auto aspect-[816/933] w-full dark:-translate-y-0.5 md:max-w-md"
            />
          </div>
        </div>
      </div>
    </div>
  </div>

  <Separator text="Check out my projects" />
  <Projects />
</Layout>
