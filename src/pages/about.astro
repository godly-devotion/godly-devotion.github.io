---
import experiences from "../collections/experiences.json";
import AboutExperience from "../components/about-experience.astro";
import PageHeading from "../components/page-heading.astro";
import Layout from "../layouts/main.astro";
---

<Layout title="About Me">
  <section class="relative z-20 mx-auto my-12 max-w-2xl px-7 lg:px-0">
    <PageHeading
      title="About Me"
      description="Hello ðŸ‘‹ I'm a front-end engineer from the United States. I'm passionate about building new products and learning new technology."
    />

    <img
      src="/assets/images/about.jpg"
      class="relative z-30 my-10 w-full rounded-xl"
    />

    <h2
      class="mb-2 mt-5 text-2xl font-bold dark:text-neutral-200 sm:mt-6 lg:mt-10"
    >
      Experience
    </h2>
    <div class="px-5 py-10">
      {
        experiences.map((experience) => {
          return (
            <div class="border-l border-gray-200 pb-10 last:border-l-0 dark:border-neutral-700">
              <AboutExperience
                dates={experience.dates}
                role={experience.role}
                company={experience.company}
                description={experience.description}
                logo={experience.logo}
              />
            </div>
          );
        })
      }
    </div>

    <h2
      class="mb-2 mt-5 text-2xl font-bold dark:text-neutral-200 sm:mt-6 lg:mt-10"
    >
      Let's Connect
    </h2>
    <p
      class="text-sm leading-6 text-gray-600 dark:text-neutral-400 sm:text-base sm:leading-7 lg:text-lg lg:leading-8"
    >
      Contact me through my <a
        href="mailto:jpark@duck.com"
        class="text-indigo-600 underline"
        >email</a
      > and I'll be sure to get back to you.
    </p>
  </section>
</Layout>
